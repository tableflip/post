{
  "name": "post",
  "version": "1.1.0",
  "description": "Handle simple form posts",
  "main": "server.js",
  "scripts": {
    "test": "ava",
    "postinstall": "npm run build",
    "start": "npm-run-all build serve",
    "serve": "node server.js",
    "build": "npm-run-all --parallel build:*",
    "build:static": "rsync -a public/ dist",
    "build:js": "browserify -t jadeify pages/main.js -o dist/bundle.js",
    "build:css": "postcss --use postcss-import --use postcss-cssnext pages/main.css -o dist/bundle.css",
    "build:html": "node build/jade.js",
    "watch": "npm-run-all --parallel watch:*",
    "watch:serve": "nodemon -x npm run serve",
    "watch:static": "nodemon -w public -e '*' -x npm run build:static",
    "watch:js": "watchify -t jadeify pages/main.js -o dist/bundle.js",
    "watch:css": "nodemon -w pages -e css -x npm run build:css",
    "watch:html": "nodemon -w pages -e jade,md -x npm run build:html"
  },
  "author": "olizilla <oli@tableflip.io>",
  "license": "ISC",
  "dependencies": {
    "akismet-api": "^2.2.0",
    "body-parser": "^1.15.0",
    "config": "^1.19.0",
    "corser": "^2.0.1",
    "express": "^4.13.4",
    "leveldown": "^1.4.4",
    "levelup": "^1.3.1",
    "mailgun-js": "^0.7.7",
    "moment": "^2.12.0"
  },
  "devDependencies": {
    "async": "^1.5.2",
    "ava": "^0.19.1",
    "basscss-align": "^1.0.2",
    "basscss-background-colors": "^2.1.0",
    "basscss-border": "^4.0.2",
    "basscss-border-colors": "^2.1.0",
    "basscss-btn": "^1.1.1",
    "basscss-btn-primary": "^1.1.0",
    "basscss-colors": "^2.2.0",
    "basscss-flexbox": "^1.0.1",
    "basscss-forms": "^1.0.0",
    "basscss-grid": "^2.0.0",
    "basscss-hide": "^1.0.1",
    "basscss-layout": "^3.1.0",
    "basscss-margin": "^1.0.7",
    "basscss-padding": "^1.1.3",
    "basscss-position": "^2.0.3",
    "basscss-type-scale": "^1.0.5",
    "basscss-typography": "^3.0.3",
    "browserify": "^13.0.0",
    "find": "^0.2.4",
    "jade": "^1.11.0",
    "jadeify": "^4.6.0",
    "mkdirp": "^0.5.1",
    "nodemon": "^1.9.1",
    "npm-run-all": "^1.5.3",
    "page": "^1.7.1",
    "postcss-cli": "^2.5.1",
    "postcss-cssnext": "^2.5.1",
    "postcss-import": "^8.0.2",
    "watchify": "^3.7.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tableflip/post.git"
  }
}
